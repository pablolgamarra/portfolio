---
import ProjectViewer from '../components/ProjectViewer.astro';
import Layout from '../layouts/Layout.astro';

const projects = await fetch('../../data/projects.json')
	.then((value) => {
		console.log(value.body);
		return value;
	})
	.catch((e) => {
		console.log('Error al fetchear');
		return [];
	});
---

<Layout title='Pablo Gamarra Dev.'>
	<!-- Sección de presentación -->
	<section
		id='home'
		class='h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-teal-500 text-white'
	>
		<div class='text-center'>
			<h1 class='text-5xl font-bold'>¡Hola! Soy un Desarrollador Web</h1>
			<p class='mt-4 text-lg'>
				Especializado en aplicaciones web, SPFx y PowerApps
			</p>
			<a
				href='#projects'
				class='mt-8 inline-block px-6 py-3 bg-white text-blue-500 rounded-full shadow-lg hover:bg-gray-200'
			>
				Ver mis Proyectos
			</a>
		</div>
	</section>

	<!-- Sección de proyectos -->
	<ProjectViewer projects={projects} />

	<!-- Sección de experiencia -->
	<section
		id='experience'
		class='py-20 bg-blue-50'
	>
		<div class='max-w-7xl mx-auto px-4'>
			<h2 class='text-3xl font-bold text-center'>Experiencia</h2>
			<div class='mt-10 space-y-6'>
				<div class='bg-white p-6 rounded-lg shadow-lg'>
					<h3 class='text-2xl font-semibold'>Posición 1</h3>
					<p class='mt-2 text-gray-600'>
						Descripción breve de tu experiencia en esta posición.
					</p>
				</div>
				<div class='bg-white p-6 rounded-lg shadow-lg'>
					<h3 class='text-2xl font-semibold'>Posición 2</h3>
					<p class='mt-2 text-gray-600'>
						Descripción breve de tu experiencia en esta posición.
					</p>
				</div>
				<!-- Puedes agregar más experiencia aquí -->
			</div>
		</div>
	</section>

	<!-- Sección de contacto -->
	<section
		id='contact'
		class='py-20 bg-gray-100'
	>
		<div class='max-w-7xl mx-auto px-4'>
			<h2 class='text-3xl font-bold text-center'>Contacto</h2>
			<form
				action='https://formsubmit.co/tu-email'
				method='POST'
				class='mt-10 max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg'
			>
				<div class='mb-4'>
					<label
						for='name'
						class='block text-sm font-medium text-gray-700'
						>Nombre</label
					>
					<input
						type='text'
						id='name'
						name='name'
						required
						class='mt-1 block w-full px-4 py-2 border rounded-md'
					/>
				</div>
				<div class='mb-4'>
					<label
						for='email'
						class='block text-sm font-medium text-gray-700'
						>Correo electrónico</label
					>
					<input
						type='email'
						id='email'
						name='email'
						required
						class='mt-1 block w-full px-4 py-2 border rounded-md'
					/>
				</div>
				<div class='mb-4'>
					<label
						for='message'
						class='block text-sm font-medium text-gray-700'
						>Mensaje</label
					>
					<textarea
						id='message'
						name='message'
						required
						class='mt-1 block w-full px-4 py-2 border rounded-md'
					></textarea>
				</div>
				<button
					type='submit'
					class='w-full py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600'
				>
					Enviar
				</button>
			</form>
		</div>
	</section>
</Layout>
